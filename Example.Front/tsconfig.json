{
	"extends": "@elyspio/vite-eslint-config/tsconfig.json",
	"compilerOptions": {
		"module": "esnext",
		"moduleResolution": "bundler",
		"paths": {
			"@/*": ["./src/*"],
			"@apis/*": ["./src/core/apis/*"],
			"@components/*": ["./src/view/components/*"],
			"@hooks/*": ["./src/view/hooks/*"],
			"@pages/*": ["./src/view/pages/*"],
			"@modules/*": ["./src/store/modules/*"],
			"@services/*": ["./src/core/services/*"],
			"@validators/*": ["./src/core/validators/*"],
			"@store": ["./src/store/index.ts"],
			"@store/*": ["./src/store/*"]
		}
	},
	"include": ["src", "scripts", "vite.config.ts"]
}
